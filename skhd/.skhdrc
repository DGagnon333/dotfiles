# Define Meh key
meh = ctrl + shift + option

# Move window to screen 1
meh - 1 : yabai -m window --display 1 && yabai -m display --focus 1

# Move window to screen 2
meh - 2 : yabai -m window --display 2 && yabai -m display --focus 2

# Move window to screen 3
meh - 3 : yabai -m window --display 3 && yabai -m display --focus 3

# Focus windows in different directions
meh - h : yabai -m window --focus west
meh - j : yabai -m window --focus south
meh - k : yabai -m window --focus north
meh - l : yabai -m window --focus east

# Move windows in different directions
meh + shift - h : yabai -m window --swap west
meh + shift - j : yabai -m window --swap south
meh + shift - k : yabai -m window --swap north
meh + shift - l : yabai -m window --swap east

# Resize windows
meh + ctrl - h : yabai -m window --resize left:-20:0
meh + ctrl - j : yabai -m window --resize bottom:0:20
meh + ctrl - k : yabai -m window --resize top:0:-20
meh + ctrl - l : yabai -m window --resize right:20:0

# Toggle window fullscreen
meh - f : yabai -m window --toggle zoom-fullscreen

# Toggle window float
meh - t : yabai -m window --toggle float

# Rotate tree
meh - r : yabai -m space --rotate 90

# Balance windows
meh - b : yabai -m space --balance

# Equalize windows
meh - e : yabai -m space --equalize

